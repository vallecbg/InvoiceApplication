<Window x:Class="InvoiceApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Currency Converter" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Currency Selection -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Select Base Currency:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="BaseCurrencyComboBox" Width="150" DisplayMemberPath="Code" SelectionChanged="BaseCurrencyComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Invoice Items List -->
        <ListView x:Name="InvoiceItemsListView" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn x:Name="OriginalPriceColumn" Header="Price (Original)" DisplayMemberBinding="{Binding OriginalPrice, StringFormat={}{0:F2}}" Width="100"/>
                    <GridViewColumn x:Name="ConvertedPriceColumn" Header="Price (Converted)" DisplayMemberBinding="{Binding PriceInSelectedCurrency, StringFormat={}{0:F2}}" Width="150"/>
                    <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity}" Width="100"/>
                    <GridViewColumn x:Name="TotalColumn" Header="Total" DisplayMemberBinding="{Binding Total, StringFormat={}{0:F2}}" Width="150"/>
                    <GridViewColumn x:Name="TotalConvertedColumn" Header="Total (Converted)" DisplayMemberBinding="{Binding TotalInSelectedCurrency, StringFormat={}{0:F2}}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>



        <!-- Add Item Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <TextBox x:Name="ItemNameTextBox" Width="150" Margin="0,0,10,0" ToolTip="Item Name"/>
            <TextBox x:Name="ItemPriceTextBox" Width="100" Margin="0,0,10,0" ToolTip="Price"/>
            <TextBox x:Name="ItemQuantityTextBox" Width="100" Margin="0,0,10,0" ToolTip="Quantity"/>
            <ComboBox x:Name="ItemCurrencyComboBox" Width="100" DisplayMemberPath="Code" Margin="0,0,10,0" ToolTip="Select Currency"/>
            <Button Content="Add Item" Click="AddItemButton_Click"/>
        </StackPanel>

        <!-- Total Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="10">
            <TextBlock Text="Total: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock x:Name="TotalTextBlock" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>

</Window>